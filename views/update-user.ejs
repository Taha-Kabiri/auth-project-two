<div style="
    font-family: Arial, sans-serif;
    background-color: #f4f7f6;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center; 
    min-height: 100vh;
">
    
    <div style="
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        padding: 30px;
        box-sizing: border-box;
        text-align: center;
    ">
        
        <h1 style="color: #333; border-bottom: 2px solid #eee; padding-bottom: 15px; margin-bottom: 30px;">
            ✏️ Update User: <%= user.firstname %>
        </h1>

        <form action="/api/user/<%= user.id %>?method=PUT" method="POST">
             [cite_start]<input type="hidden" name="id" value="<%= user.id %>" /> [cite: 40]
            
            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; font-weight: bold; color: #666; text-align: left;">First Name</label>
                <input
                    type="text"
                    placeholder="firstname"
                    name="firstname"
                    value="<%= user.firstname %>"
                    required
                    [cite_start]style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;" [cite: 40]
                />
            </div>
            
            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; font-weight: bold; color: #666; text-align: left;">Email</label>
                <input
                    type="text"
                    placeholder="email"
                    name="email"
                    value="<%= user.email %>"
                    required
                    [cite_start]style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;" [cite: 41]
                />
            </div>
            
            <div style="margin-bottom: 25px;">
                <label style="display: block; margin-bottom: 5px; font-weight: bold; color: #666; text-align: left;">Password</label>
                <input
                    type="password"
                    placeholder="password"
                    name="password"
                    value="<%= user.password%>"
                    required
                    [cite_start]style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;" [cite: 41, 42]
                />
            </div>

            <input
                type="submit"
                value="Update"
                style="
                    width: 100%;
                    padding: 12px; 
                    background-color: #FF9800; /* رنگ نارنجی برای آپدیت */
                    color: white; 
                    border: none; 
                    border-radius: 5px; 
                    cursor: pointer; 
                    font-size: 1.1em;
                    font-weight: bold;
                    transition: background-color 0.3s;
                "
                onmouseover="this.style.backgroundColor='#FB8C00'"
                onmouseout="this.style.backgroundColor='#FF9800'"
            />
        </form>

        <hr style="border: 0; height: 1px; background-color: #eee; margin: 30px 0;">

        <div style="font-size: 0.9em; color: #555;">
            <a 
                href="/api/user" 
                style="color: #2196F3; text-decoration: none; font-weight: bold;"
            >
                Back to User List
            </a>
        </div>

    </div>
</div>
